@model IEnumerable<WebAPI.Department>

@{
    ViewData["Title"] = "Oddelki";
}

<h1>Oddelki</h1>

<p>
    <a asp-action="Create">Dodaj</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Ime Oddelka
            </th>
            <th>
                Lokacija
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.City)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DepartmentId">Uredi</a> |
                <a asp-action="Details" asp-route-id="@item.DepartmentId">Podrobnosti</a> |
                <a asp-action="Delete" asp-route-id="@item.DepartmentId">Izbriši</a>
            </td>
        </tr>
}
    </tbody>
</table>
