@model IEnumerable<WebAPI.Region>

@{
    ViewData["Title"] = "Regije";
}

<h1>Regije</h1>


<table class="table table-hoverd">
    <thead>
        <tr>
            <th>
                Ime regije
            </th>
            <th><a asp-action="Create">+ Dodaj regijo</a></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegionName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RegionId">Uredi</a> |
                @*<a asp-action="Details" asp-route-id="@item.RegionId">Podrobnosti</a> |*@
                @*<a asp-action="Delete" asp-route-id="@item.RegionId">Izbriši</a>*@
                <a asp-action="Delete" asp-route-id="@item.RegionId" onclick="return confirm('Izbrisali boste regijo: @item.RegionName!')">Izbriši</a>
            </td>
        </tr>
}
    </tbody>
</table>
