@model WebAPI.Region

@{
    ViewData["Title"] = "Dodaj";
}

<h1>Dodaj Regijo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegionName" class="control-label">Ime regije</label>
                <input asp-for="RegionName" class="form-control" />
                <span asp-validation-for="RegionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary c-btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">nazaj na tabelo</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
