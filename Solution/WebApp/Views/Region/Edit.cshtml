@model WebAPI.Region

@{
    ViewData["Title"] = "Uredi";
}

<h1>Uredi</h1>

<h4>Id regije: @Model.RegionId</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RegionId" />
            <div class="form-group">
                <label asp-for="RegionName" class="control-label">Ime regije</label>
                <input asp-for="RegionName" class="form-control" />
                <span asp-validation-for="RegionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Shrani spremenbe" class="btn btn-primary c-btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazaj na tabelo</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
