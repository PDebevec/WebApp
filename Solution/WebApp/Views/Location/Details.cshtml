@model WebAPI.Location

@{
    ViewData["Title"] = "Podrobnosti";
}

<h1>Podrobnosti</h1>

<div>
    <h4>Id lokacije: @Model.LocationId</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Naslov
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StreetAddress)
        </dd>
        <dt class = "col-sm-2">
            Poštna številka
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PostalCode)
        </dd>
        <dt class = "col-sm-2">
            Mesto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            Provinca
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StateProvince)
        </dd>
        <dt class = "col-sm-2">
            Država
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Country.CountryName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.LocationId">Uredi</a> |
    <a asp-action="Index">Nazaj na tabelo</a>
</div>
