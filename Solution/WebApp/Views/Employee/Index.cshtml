                @Html.DisplayFor(modelItem => item.Job.JobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manager.FirstName) @Html.DisplayFor(modelItem => item.Manager.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.DepartmentName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployeeId">Uredi</a> |
                <a asp-action="Details" asp-route-id="@item.EmployeeId">Podrobnosti</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeId">Izbriši</a>
            </td>
        </tr>
}
    </tbody>
</table>
